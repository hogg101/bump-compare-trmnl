{
  "fields": [
    {
      "key": "due_month",
      "type": "text",
      "label": "Due Month",
      "placeholder": "YYYY-MM",
      "help": "Optional: Approximate due month (e.g., 2024-09)",
      "required": false
    },
    {
      "key": "due_date",
      "type": "text",
      "label": "Due Date",
      "placeholder": "YYYY-MM-DD",
      "help": "Optional: Exact due date (overrides due month if set)",
      "required": false
    },
    {
      "key": "month_anchor_day",
      "type": "number",
      "label": "Month Anchor Day",
      "default": 15,
      "help": "Day of month to use when only due_month is set (default: 15)",
      "required": false
    },
    {
      "key": "locale",
      "type": "select",
      "label": "Locale",
      "options": [
        { "value": "en-GB", "label": "UK English" },
        { "value": "en-US", "label": "US English" }
      ],
      "default": "en-GB",
      "help": "Language and regional settings",
      "required": false
    },
    {
      "key": "units",
      "type": "select",
      "label": "Units",
      "options": [
        { "value": "metric", "label": "Metric (mm, g)" },
        { "value": "imperial", "label": "Imperial (in, oz)" }
      ],
      "default": "metric",
      "help": "Measurement units (auto-set from locale if not specified)",
      "required": false
    }
  ]
}

