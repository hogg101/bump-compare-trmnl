{% comment %}
  Bump Compare - TRMNL v2 Plugin
  Full viewport
{% endcomment %}

{% assign shell_modifier = "bump-compare-shell--full" %}
{% assign viewport_modifier = "" %}
{% render "bump_compare_markup", due_date_str: due_date_str, locale: locale, units: units, weeks_data: weeks_data, shell_modifier: shell_modifier, viewport_modifier: viewport_modifier %}

<style>
.bump-compare-shell {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
  text-align: center;
  padding: 0.5rem 0.85rem 0.35rem;
  box-sizing: border-box;
}

.title_bar {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.35rem;
  margin-bottom: 0.35rem;
  font-family: "Arial Black", "Helvetica Neue", sans-serif;
  text-transform: uppercase;
  letter-spacing: 1.25px;
  font-weight: 900;
  font-size: 0.9rem;
  line-height: 1;
}

.title_bar .title {
  display: inline-block;
  white-space: nowrap;
}

.bump-compare {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  text-align: center;
  padding: 0.25rem 0 0.2rem;
  width: 100%;
  flex: 1 1 auto;
  gap: 0.4rem;
  box-sizing: border-box;
}

.week-display {
  margin-bottom: 0.5rem;
}

.week-number {
  font-size: 2.25rem;
  font-family: "Times New Roman", serif;
  font-style: italic;
  font-weight: bold;
  margin-bottom: 0.25rem;
}

.trimester-display {
  font-size: 1rem;
  font-family: "Arial Black", "Helvetica Neue", sans-serif;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: 900;
  margin-bottom: 0.25rem;
}

.progress-container {
  margin-top: 0.35rem;
  margin-bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.35rem;
}

.progress-bar {
  width: 96%;
  height: 18px;
  border: 2px solid #000;
  border-radius: 0;
  overflow: hidden;
  box-shadow: 2px 2px 0px #888;
  background: transparent;
}

.progress-fill {
  height: 100%;
  width: 0%;
  display: flex;
  flex-direction: column;
}

.progress-tone {
  flex: 1;
}

.bg--black { background-color: #000; }
.bg--white { background-color: #fff; }
.bg--gray-30 { background-color: #4d4d4d; }
.bg--gray-55 { background-color: #8c8c8c; }

.progress-text {
  font-size: 0.8rem;
  font-family: "Courier New", monospace;
  color: #444;
}

.comparator {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 0.4rem;
  flex: 1 1 auto;
}

.icon-container {
  width: 170px;
  height: 170px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 0.35rem;
}

.icon-container img {
  max-width: 100%;
  max-height: 100%;
  image-rendering: pixelated;
}

.comparator-name {
  font-size: 1.35rem;
  font-family: "Arial Black", "Helvetica Neue", sans-serif;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: 900;
}

.comparator-blurb {
  max-width: 94%;
  margin: -0.1rem auto 0.1rem;
  font-size: 0.95rem;
  line-height: 1.2;
  font-family: "Times New Roman", serif;
  font-style: italic;
}

.comparator-size {
  font-size: 0.9rem;
  font-family: "Courier New", monospace;
  color: #444;
}
</style>
